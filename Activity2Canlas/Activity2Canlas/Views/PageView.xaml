<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Activity2Canlas.Views.PageView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Student ID"/>
            <Entry Text="{Binding StudentSet.StudentID}"/>

            <Label Text="Student Name"/>
            <Entry Text="{Binding StudentSet.Name}"/>

            <Label Text="Course Code"/>
            <Entry Text="{Binding StudentSet.CourseCode}"/>

            <Label Text="Course Title"/>
            <Entry Text="{Binding StudentSet.CourseTitle}"/>

            <Label Text="Units"/>
            <Entry Text="{Binding StudentSet.Units}"/>

            <Label Text="Date of Attendance"/>
            <Entry Text="{Binding StudentSet.DateofAttendance}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>